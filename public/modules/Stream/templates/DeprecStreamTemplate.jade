.top-bar
    .row
        .col-md-4
            #search_box
                .form-group
                    .input-group
                        input#search.form-control(type='text', placeholder='What you are looking for?')
                        span.input-group-btn
                            button#SearchButton.btn(type='submit')
                                span.fui-search
        .col-md-4
            #logo
        .col-md-4
            #right_bar
                span#user.fui-user
                button#add_new_item.btn.btn-embossed.btn-primary Add New Item
                #notification(style='display: inline')
                    ul#notification_bar.nav.navbar-nav
                        li
                            a(href='#')
                                span#bell.glyphicon.glyphicon-bell
                        li
                            // Unread Indicator with number
                            span#unread.navbar-new 2
    #AddNewItem
    .row
    // Large modal
    #modal_item.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
        #modal_item_dialog.modal-dialog.modal-lg
            #modal_item_content.modal-content
                .row
                    .col-md-12
                        #modal_item_header
                            h3 Retro Bike
                            span#modal_footer
                                span.glyphicon.glyphicon-time
                                | 2days
                                span.glyphicon.glyphicon-eye-open
                                | 86
                                span.glyphicon.glyphicon-heart-empty
                                | 122
                        div(style='height:10px;')
                    .col-md-9
                        #modal_item_div
                    .col-md-3
                        #profile
                        div(style='height:10px;')
                        #down_to_profile
                    .col-md-12
                        div(style='height:10px;')
                        #modal_item_details
                            p#text
                                | Totally restored retro fixi-bike with premium parts, no gear, 28” aluminium city tires, Brooks vintage saddle, Retro paddles, all aluminimum parts.
                            button#btn_interested.btn.btn-custom  I am interested
                            span#footer Bike  Retro  Brooks  Fixi  Vintage
                        div(style='height:10px;')
                        #conversation
                            #control_group
                                .input-group
                                    span.input-group-btn
                                        button#camera.btn.btn-default.btn(type='button')
                                            span.glyphicon.glyphicon-camera
                                    input.form-control(type='text', placeholder='Type your message here...')
                                button#send.btn.btn-embossed.btn-primary(type='button')
                                    | Send
                        #right_to_conversation
    // Large modal ends here
    #specify_your_search_header
        | Specify your search
    #specify_your_search_content
        .row
            .col-md-4
                .form-inline
                    span.glyphicon.glyphicon-map-marker
                    | Location
                input#location.form-control(type='text', placeholder='Your place', style='width:200px height:40px;')
                .form-inline
                    span.glyphicon.glyphicon-send
                    | Distance
                #distance-slider.ui-slider(style='width:190px height:12px; ')
                    span.ui-slider-value.first 0
                    span.ui-slider-value.last ∞
            .col-md-6
                .form-inline
                    span.glyphicon.glyphicon-tags
                    | Hashtag
                input.tagsinput(id='SearchTags', value='Bike,Retro,Books', style='height:40px')
                .form-inline
                    span.glyphicon.glyphicon-credit-card
                    | Price
                #price-slider.ui-slider(style='width:190px height:12px')
                    span.ui-slider-value.first 0
                    span.ui-slider-value.last 30+
                                //∞
            .col-md-2
                .match
                    h3 Matches
                    #matchNumbers
                        h1 63
    #search_results_header
        | Search result
    #main(role='main')
        // Grid blocks
        ul#item_list
            //.item
                img#4.item_image(src='', width='230')
                .item_price 4000 DKK
                .item_details
                    p.header Retro bike
                    p.body
                        | Totally restored retro fixi-bike with premium parts, no gear, 28” aluminium city tires, Brooks vintage saddle, Retro paddles, all aluminimum parts.
                .item_footer
                    .time
                        .vertical-space-8px
                        span.glyphicon.glyphicon-time
                        | 2days
                    .view
                        .vertical-space-8px
                        span.glyphicon.glyphicon-eye-open
                        | 86
                    .like
                        .vertical-space-8px
                        span.glyphicon.glyphicon-heart-empty
                        | 122
            // End of grid blocks
    .loading More items are loading
